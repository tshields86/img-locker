<% if current_user %>
<div class="jumbotron">
  <h2>Welcome: <%= current_user.email %></h2>
  <%= link_to "View Images", images_path, class: "btn btn-primary btn-welcome" %>
</div>
<% else %>
<div class="jumbotron">
  <h2>Welcome to the Photo Locker app!</h2>
  <p class="lead">
    You'll love managing your Photos with our application. Sign up!
  </p>
</div>
<div class="row">
  <div class="plans clearfix">
    <div class="col-lg-4 col-lg-offset-2 plan">
      <h2>Premium Plan</h2>
      <div class="features">
        <ul>
          <li>Unlimited Image Uploads</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
          <li>Price: $10</li>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
      </p>
    </div>
    <div class="col-lg-4 plan">
      <h2>Amaze Plan</h2>
      <div class="features">
        <ul>
          <li>Unlimited Image Uploads</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
          <li class='extra'>Unlimited projects</li>
          <li>Price: $20</li>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
      </p>
    </div>
  </div>
</div>
<% end %>
